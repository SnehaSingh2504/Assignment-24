#include <stdio.h>

int sumOfSquares(int n) {
    if (n == 1)   // Base case
        return 1;
    else
        return (n * n) + sumOfSquares(n - 1); 
}

int main() {
    int n;
    printf("Enter value of n: ");
    scanf("%d", &n);

    printf("Sum of squares = %d\n", sumOfSquares(n));
    return 0;
}
