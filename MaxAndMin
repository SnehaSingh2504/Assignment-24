#include <stdio.h>

int max, min;

void findMaxMin(int arr[], int n) {
    if (n == 1) {  // base case
        max = min = arr[0];
        return;
    }

    findMaxMin(arr, n - 1);

    if (arr[n - 1] > max) max = arr[n - 1];
    if (arr[n - 1] < min) min = arr[n - 1];
}

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    findMaxMin(arr, n);

    printf("Max = %d, Min = %d\n", max, min);

    return 0;
}
